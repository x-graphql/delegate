{
    "name": "x-graphql/delegate",
    "description": "Delegate GraphQL query execution",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "symplify/easy-coding-standard": "^12.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "XGraphQL\\Delegate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XGraphQL\\Delegate\\Test\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "webonyx/graphql-php": "^15.9"
    },
    "config": {
        "sort-packages": true
    }
}
